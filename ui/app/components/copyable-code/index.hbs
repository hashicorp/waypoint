<span class="copyable-code {{unless @inline 'block'}}">
  {{yield}}
  <CopyButton
   @clipboardTarget="#{{@ref}}"
   @success={{this.onSuccess}}
   @error={{this.onError}}
   class={{if this.copySuccess 'copy-success'}}
  >
    {{inline-svg (if this.copySuccess 'copy-success' 'copy-action') class="icon"}}
  </CopyButton>
</span>
