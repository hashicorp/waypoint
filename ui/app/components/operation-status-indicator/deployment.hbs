<OperationStatusIndicator @operation={{@operation}} @isDetailed={{false}}>
  <:status-text>
    {{t (concat "page.deployments.status_prefix." @operation.status.state)}}
  </:status-text>
  <:small-text>
    {{yield to="small-text"}}
  </:small-text>
  <:badge>
    {{yield to="badge"}}
  </:badge>
</OperationStatusIndicator>
