<ul class="breadcrumbs pds-breadcrumbs">
  {{#each this.breadcrumbs.breadcrumbs as |breadcrumb index|}}
    <li class="pds-breadcrumbs__crumb {{if (eq (inc index) this.breadcrumbs.length) "is-active"}}">
      {{#if breadcrumb.isPending}}
        <a href="#" aria-label="loading" data-test-breadcrumb="loading">&hellip;</a>
      {{else}}
        <LinkTo @route={{breadcrumb.route}} data-test-breadcrumb={{breadcrumb.route}}>
          {{#if breadcrumb.icon}}
            <FlightIcon @name={{breadcrumb.icon}} />
          {{/if}}
          <span>{{breadcrumb.label}}</span>
        </LinkTo>
      {{/if}}
    </li>
  {{/each}}
</ul>
