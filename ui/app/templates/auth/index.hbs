<h1>{{t 'auth.title'}}</h1>
<p>{{t 'auth.subtitle'}}</p>
{{#if @model.authMethodsList}}
  <OidcAuthButtons @model={{@model}}/>
{{else}}
  <p>
    <LinkTo @route="auth.token" class="button button--primary">
      {{t 'auth.button'}}
    </LinkTo>
  </p>
{{/if}}
<hr />
<p>
  <small>
    Received an invite?
    <LinkTo @route="auth.invite">Redeem invite</LinkTo>
  </small>
</p>
