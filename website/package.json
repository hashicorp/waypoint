{
  "scripts": {
    "start": "npx --yes @hashicorp/docs-preview@docs-preview",
    "dev": "npm run start",
    "clean": "rm -rf ./docs-preview",
    "generate:readme": "next-hashicorp markdown-blocks README.md",
    "format": "next-hashicorp format content/**/* data/**/*",
    "lint": "next-hashicorp lint content/**/* data/**/*",
    "vercel-build": "npm i -g npm@7 && npx --yes @hashicorp/docs-preview@docs-preview build waypoint && cp -R ./docs-preview/out/. ./out"
  },
  "devDependencies": {
    "@hashicorp/platform-cli": "^1.2.0"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=10.0.0"
  }
}
